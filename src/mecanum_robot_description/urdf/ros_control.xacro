      <joint name="${prefix}roller_9_9_joint">
        <state_interface name="position" />
      </joint>

    </ros2_control>
    <gazebo>
      <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <ros>
        <remapping>/mecanum_bot_base_controller/cmd_vel_unstamped:=/cmd_vel</remapping>
      </ros>
        <parameters>$(find mecanum_robot_gazebo)/config/mecanum_controllers.yaml</parameters>
      </plugin>
    </gazebo>
  </xacro:macro>

</robot>